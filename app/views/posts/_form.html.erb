<%= form_with(model: @post, local: true) do |form| %>
  <%= form.text_area :text, placeholder: "text", cols: "200", rows: "10" %>
  <div class="form-input">

    <label class="form-image">
      <span class="image-file">画像</span>
      <%= form.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= form.submit "SEND" %>
<% end %>