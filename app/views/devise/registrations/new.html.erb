<div class="contents row">
  <div class="container">
    <h2>新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label "ニックネーム" %> <em>(１２文字以内)</em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "12" %>
      </div>

      <div class="field">
        <%= f.label "性別" %>
        <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box"}) %>
      </div>
      <div class="field">
        <%= f.label "血液型" %>
        <%= f.collection_select(:blood_type_id, BloodType.all, :id, :name, {}, {class:"select-box"}) %>
      </div>

            <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birth_day,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>

      <div class="field">
        <%= f.label "菜食ジャンル" %>
        <%= f.collection_select(:veg_id, Veg.all, :id, :name, {}, {class:"select-box"}) %>
      </div>

      <div class="field">
        <%= f.label "現在地" %>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box"}) %>
      </div>

      <div class="field">
        <%= f.label "Vatch" %>
        <%= f.collection_select(:vatch_id, Vatch.all, :id, :name, {}, {class:"select-box"}) %>
      </div>
      
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label "パスワード(英数６文字以上)" %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label "再パスワード" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  </div>
</div>